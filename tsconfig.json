{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/presentation/controllers/*"],
      "@domain/models": ["./src/domain/models"],
      "@domain/usecases": ["./src/domain/usecases"],
      "@validations/*": ["src/presentation/validators/*"],
      "@presentation/protocols": ["./src/presentation/protocols"],
      "@presentation/errors": ["./src/presentation/errors"],
      "@data/protocols": ["./src/data/protocols"],
      "@data/usecases": ["./src/data/usecases"]
    }
  },
  "include": ["src/**/*.ts"]
}
