{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      // "@errors": ["src/errors"],
      // "@controllers/*": ["./src/presentation/controllers/*"],
      "@domain/models": ["src/domain/models"],
      "@domain/usecases": ["src/domain/usecases"],
