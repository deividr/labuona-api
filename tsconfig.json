{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/presentation/controllers/*"],
      "@usecases/*": ["./src/domain/usecases/*"],
      "@models/*": ["./src/domain/models/*"],
      "@repositories/*": ["./src/data/protocols/db/*"],
      "@validations/*": ["src/presentation/validators/*"],
      "@presentation/protocols": ["./src/presentation/protocols"],
      "@data/protocols": ["./src/data/protocols"]
    }
  },
  "include": ["src/**/*.ts"]
}
